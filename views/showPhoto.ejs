<%- include("partials/header")%>

<div class="ui main text container segment">
	<div class="ui huge header"><%= photo.location %> - <%= photo.category %></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= photo.image %>">
			<div class="content">
				<span><%= photo.created %>.moment().format('LLL')</span>
			</div>
			
			<a class="ui orange basic button" href="/photos/<%= photo._id %>/photos">Edit</a>
			<form id="delete" action="/photos/<%= photo._id %>?_method=DELETE" method="POST">
				<button class="ui red inverted button">Delete</button>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer")%>